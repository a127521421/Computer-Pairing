// 全域
html, body{
  height: 100%;
}
h1,h2,h3,h4,h5,h6,p{
  font-family: '微軟正黑體';
}
  /* 按鈕 */
#button{
    margin: 1.5rem 0;
}

// APP
  /* 背景 */
#app{
  min-height: 100vh;
  background-image: linear-gradient(to top, #96fbc4 0%, #f9f586 100%);
}
  /* 顯示頁面高度 */
.page {
  /* 100vh - nav 高 - footer 高 = 內容最小高 */
  min-height: calc(100vh - 59px - 28px);
}
  /* icon大小 */
#icon {
  font-size: 1.5rem;
}
  /* footer */
#footer {
  width: 100%;
  padding-right: 15px;
  padding-left: 15px;
  text-align: center;
  color: black;
  font-size: 1.2rem;
  font-family: '微軟正黑體';
}
@media (max-width: 792px) {
  #footer {
    font-size:1rem;
  }
}
@media (max-width: 499px) {
  #footer {
    font-size:0.8rem;
  }
}

